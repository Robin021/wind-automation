<script setup>
import { ref, computed, onMounted } from 'vue'
import dayjs from 'dayjs'
import { useUserStore } from '@/stores/user'
import api from '@/api'

const userStore = useUserStore()
const loading = ref(false)
const recentStocks = ref([])
const indices = ref([])
const sectors = ref([])

const today = computed(() => dayjs().format('YYYYå¹´MMæœˆDDæ—¥'))

const vipLevelText = computed(() => {
  const levels = ['å…è´¹ç”¨æˆ·', 'VIP1', 'VIP2', 'VIP3', 'SVIP']
  return levels[userStore.vipLevel] || 'æœªçŸ¥'
})

const stats = ref({
  myStocks: 0,
  signals: 0,
  stockLimit: 5,
  daysRemaining: 'âˆ',
})

// è®¡ç®—é¢œè‰²ç±»å
const getColorClass = (value) => {
  if (value > 0) return 'text-red'
  if (value < 0) return 'text-green'
  return ''
}

async function fetchData() {
  loading.value = true
  try {
    // 1. è·å–æˆ‘çš„è‚¡ç¥¨
    const res = await api.get('/allocations/my')
    recentStocks.value = res.data.items.slice(0, 5)
    stats.value.myStocks = res.data.total
    
    // 2. è·å– VIP é…ç½®
    const configRes = await api.get('/config/vip-levels')
    const myLevel = configRes.data.find(c => c.level === userStore.vipLevel)
    if (myLevel) {
      stats.value.stockLimit = myLevel.stock_limit === -1 ? 'ä¸é™' : myLevel.stock_limit
    }

    // 3. è·å–å¸‚åœºæŒ‡æ•°
    try {
      const indicesRes = await api.get('/datasources/indices')
      indices.value = indicesRes.data.map(idx => {
        const pre = idx.pre_close || idx.open // Fallback
        const change = (idx.close - pre)
        const changePct = (change / pre) * 100
        return {
          ...idx,
          change,
          changePct
        }
      })
    } catch (err) {
      console.warn('Failed to fetch indices', err)
    }

    // 4. è·å–æ¿å—æ’è¡Œ
    try {
      const sectorsRes = await api.get('/datasources/sectors')
      sectors.value = sectorsRes.data
    } catch (err) {
      console.warn('Failed to fetch sectors', err)
    }

  } catch (e) {
    console.error(e)
  } finally {
    loading.value = false
  }
}

onMounted(fetchData)
</script>

